generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  isActive Boolean @default(true)
  role Role @default(USER)
}

model Category {
  id Int @id @default(autoincrement())
  name String @unique
  createdAt DateTime @default(now())
  products Product[]
}

model Product {
  id Int @id @default(autoincrement())
  name String
  quantity Float
  stock Int
  categoryId Int
  category Category @relation(fields: [categoryId], references: [id])
}